pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/saeedgebaly/jenkens.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('test-1') {
                    sh 'npm install'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('test-1') {
                    sh 'npm test || echo "No tests defined"'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('test-1') {
                    script {
                        def imageName = "test-app:${env.BUILD_NUMBER}"
                        def imageLatest = "test-app:latest"
                        
                        sh "docker build -t ${imageName} ."
                        sh "docker tag ${imageName} ${imageLatest}"
                        
                        echo "âœ… Docker image built: ${imageName}"
                        
                        // Ø¹Ø±Ø¶ Ø§Ù„Ù€ images
                        sh 'docker images | grep test-app'
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Build completed successfully!'
            echo "ğŸ³ Docker image: test-app:${env.BUILD_NUMBER}"
            echo "Run with: docker run -p 3000:3000 test-app:latest"
        }
        failure {
            echo 'âŒ Build failed!'
        }
    }
}
