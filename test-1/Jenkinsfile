pipeline {
    agent any
    
    tools {
        maven 'maven'
        jdk 'JDK17'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/saeedgebaly/jenkens.git'
            }
        }
        
        stage('Build') {
            steps {
                dir('test-1/demo') {
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('test-1/demo') {
                    sh 'mvn test'
                }
            }
        }
        
        stage('Package') {
            steps {
                dir('test-1/demo') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        stage('Archive') {
            steps {
                dir('test-1/demo') {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                dir('test-1/demo') {
                    script {
                        def imageName = "test-app:${env.BUILD_NUMBER}"
                        def imageLatest = "test-app:latest"
                        
                        sh "docker build -t ${imageName} ."
                        sh "docker tag ${imageName} ${imageLatest}"
                        
                        echo "‚úÖ Docker image built: ${imageName}"
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Build completed successfully!'
            echo "üê≥ Docker image: test-app:${env.BUILD_NUMBER}"
        }
        failure {
            echo '‚ùå Build failed!'
        }
        always {
            junit allowEmptyResults: true, testResults: 'test-1/demo/target/surefire-reports/*.xml'
        }
    }
}
